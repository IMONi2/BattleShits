<h3>Your ships</h3>
<table>
    @for (int i = 0; i < 10; i++)
    {
        <tr>
            @for (int j = 0; j < 10; j++)
            {
                string cellContent = @ViewBag.p1Board[j, i] == 1 ? "🚢" : "🌊";
                <td>@cellContent</td>
            }
        </tr>
    }
</table>

@if (ViewBag.readyToBattle == true) 
{
    <div style="text-align: center; margin-top: 20px;">


        <a asp-action="SeaBattle" asp-controller="BattleField2"
        asp-route-gameId="@ViewBag.gameId"
        asp-route-boardNumber="@ViewBag.boardNumber"
        class="btn btn-primary">Ready to battle!</a>


    </div>
}