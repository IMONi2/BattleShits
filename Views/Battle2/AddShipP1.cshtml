<h3>Your ships</h3>
<table>
    @for (int i = 0; i < Model.P1Board.GetLength(0); i++)
    {
        <tr>
            @for (int j = 0; j < Model.P1Board.GetLength(1); j++)
            {
                string cellContent = Model.P1Board[i, j] == 1 ? "🚢" : "🌊";
                <td>@cellContent</td>
            }
        </tr>
    }
</table>

<div style="text-align: center; margin-top: 20px;">


    <a asp-action="SeaBattle" asp-controller="BattleShip"
       asp-route-gameId="@ViewBag.gameId"
       asp-route-boardNumber="@ViewBag.boardNumber"
       class="btn btn-primary">Ready to battle!</a>
    
   
</div>