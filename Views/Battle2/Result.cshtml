@model BattleShits.Models.DatabaseMethods;

@{
    ViewData["Title"] = "Results!";
}

<h2>Battle Results</h2>
<p>After a long and hard battle we have a winner...</p>
<p>@ViewBag.winner, congratulations!</p>

<h3>Player 1 Stats</h3>
<ul>
    <li>Total Shots: @ViewBag.p1ShotCount</li>
    <li>Total Hits: @ViewBag.p1HitCount</li>
    <li>
        Hitrate:
        @if (ViewBag.p1HitCount > 0)
        {
            @($"{(double)ViewBag.p1HitCount / ViewBag.p1ShotCount:P2}")
        }
        else
        {
            @("0%")
        }
    </li>
</ul>

<h3>Player 2 Stats</h3>
<ul>
    <li>Total Shots: @ViewBag.p2ShotCount</li>
    <li>Total Hits: @ViewBag.p2HitCount</li>
    <li>
        Hitrate:
        @if (ViewBag.p2HitCount > 0)
        {
            @($"{(double)ViewBag.p2HitCount / ViewBag.p2ShotCount:P2}")
        }
        else
        {
            @("0%")
        }
    </li>
</ul>
